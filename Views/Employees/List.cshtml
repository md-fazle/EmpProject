@{
}
@model List<EmployeeManagementSystem.Models.Entities.Employee>
<h1>Employee List</h1>
 

<form asp-action="List" asp-controller="Employees" method="post">
    <input type="text" name="searchString" value="" placeholder="Search...."/>
    <button type="submit">Search</button>
</form>







<a class="btn btn-light" href="@Url.Action("Add")" role="button">Add Employee</a>

<table class="table">
    <thead>
    <th>EmployeeId</th>
    <th>Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Gender</th>
    <th>Birthday</th>
    <th>Department</th>
    <th>Salary</th>
    <th>Address</th>
    <th>Edit</th>
    <th>Delete</th>
    </thead>
    <tbody>
        @foreach(var employee in Model)
        {
            <tr>
                <td>@employee.EmployeeId</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Phone</td>
                <td>@employee.Gender</td>
                <td>@employee.Birthday</td>
                <td>@employee.Department</td>
                <td>@employee.Salary</td>
                <td>@employee.Address</td>
                <td>
                    <a type="submit" class="btn btn-primary" asp-controller="Employees" asp-action="Edit" asp-route-id="@employee.id">Edit</a>
                </td>
                <td>
                    <form asp-action="Delete" asp-controller="Employees" asp-route-id="@employee.id" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>

            </tr>
        }
    </tbody>

</table>