@{
}
<h1>Edit Employees</h1>
@if(Model is null)
{
    <p>No Employees found</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label form="label">id</label>
            <Input type="text" class="form-control" asp-for="id" readonly />
        </div>
        <div class="mt-3">
            <label form="label">EmployeeId</label>
            <Input type="number" class="form-control" asp-for="EmployeeId" />
        </div>
        <div class="mt-3">
            <label form="label">Name</label>
            <Input type="text" class="form-control" asp-for="Name" />
        </div>
        <div class="mt-3">
            <label form="label">Email</label>
            <Input type="email" class="form-control" asp-for="Email" />
        </div>
        <div class="mt-3">
            <label form="label">Phone</label>
            <Input type="text" class="form-control" asp-for="Phone" />
        </div>
        <div class="mt-3">
            <label form="label">Gender</label>
            <Input type="text" class="form-control" asp-for="Gender" />
        </div>
        <div class="mt-3">
            <label form="label">Birthday</label>
            <Input type="date" class="form-control" asp-for="Birthday" />
        </div>
        <div class="mt-3">
            <label form="label">Department</label>
            <Input type="text" class="form-control" asp-for="Department" />
        </div>
        <div class="mt-3">
            <label form="label">Salary</label>
            <Input type="text" class="form-control" asp-for="Salary" />
        </div>
        <div class="mt-3">
            <label form="label">Address</label>
            <Input type="text" class="form-control" asp-for="Address" />
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
}
 

